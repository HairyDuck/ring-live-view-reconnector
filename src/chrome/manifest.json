{
    "manifest_version": 3,
    "name": "Ring Live View Reconnector",
    "version": "1.1.2",
    "description": "Automatically reconnects Ring Live View when disconnected, with a visual notification indicator.",
    "content_scripts": [
        {
            "matches": ["https://account.ring.com/*"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    }
} 